<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_participant_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@color/drawer_header_background">

    <ImageView
        android:id="@+id/drawer_participant_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_participant_icon"
        android:src="@drawable/ic_participant"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/drawer_participant_info_holder" />

    <LinearLayout
        android:id="@+id/drawer_participant_info_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/drawer_participant_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/drawer_settings_button"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/drawer_participant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@color/drawer_header_text"
            android:fontFamily="sans-serif-medium"
            android:text="@{participant.friendlyName}"
            tools:text="Donald Trump" />

        <TextView
            android:id="@+id/drawer_participant_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/drawer_header_text"
            tools:text="Additional info" />

    </LinearLayout>

    <ImageView
        android:id="@+id/drawer_settings_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
